<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="molliesubscriptions.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='molliesubscriptions']/div" position="after">
                <h2>Buffer Days</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-12 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" string="Buffer Days" for="buffer_days"/>
                                    <field name="buffer_days" class="oe_inline" style="width: 70% !important;"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>