<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit sale order form view -->
        <record id="sale_order_inherit_ollo_mollie" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="is_abo_sale_order" invisible="1"/>
                    <button name="action_run_crif_check" type="object" string="Run CRIF check"
                            class="btn btn-primary"
                            attrs="{'invisible': ['|',('state', '!=', 'sale'),('is_abo_sale_order','=',False)]}"/>
                    <button name="create_recharge_invoice" type="object" string="Recharge Invoice"
                            class="btn btn-primary"
                            attrs="{'invisible': ['|',('state', '!=', 'sale'),('is_abo_sale_order','=',False)]}"/>
                </xpath>
<!--                <xpath expr="//div[@name='button_box']" position="inside">-->
<!--                    <button name="action_view_abo_delivery" type="object" class="oe_stat_button" icon="fa-truck"-->
<!--                            attrs="{'invisible': ['|',('state', '!=', 'sale'),('is_abo_sale_order','=',False)]}">-->
<!--                        <field name="abo_delivery_count" widget="statinfo" string="Abo Delivery"/>-->
<!--                    </button>-->
<!--&lt;!&ndash;                    <button name="action_view_subscription" type="object" class="oe_stat_button" icon="fa-usd"&ndash;&gt;-->
<!--&lt;!&ndash;                            attrs="{'invisible': ['|',('state', '!=', 'sale'),('is_abo_sale_order','=',False)]}"&ndash;&gt;-->
<!--&lt;!&ndash;                            string="Mollie Subscription">&ndash;&gt;-->
<!--&lt;!&ndash;                    </button>&ndash;&gt;-->
<!--                </xpath>-->
                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                    <field name="is_starting_fees" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='validity_date']" position="before">
                    <field name="cirf_result" widget="state_selection"
                           attrs="{'invisible': ['|',('state', '!=', 'sale'),('is_abo_sale_order','=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>