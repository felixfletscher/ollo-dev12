<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit sale order form view -->
        <record id="sale_order_inherit_ollo_mollie" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
<!--                    <button name="action_create_refund" type="object" string="Create Refund"-->
<!--                            class="btn btn-primary"-->
<!--                            attrs="{'invisible': [('state', '!=', 'sale')]}"/>-->
                    <button name="action_run_crif_check" type="object" string="Run CRIF check"
                            class="btn btn-primary"
                            attrs="{'invisible': [('state', '!=', 'sale')]}"/>
<!--                    <button name="get_subscription_payment" type="object" string="Get Sub Payment"-->
<!--                            class="btn btn-primary" attrs="{'invisible': [('state', '!=', 'sale')]}"/>-->
                    <button name="create_recharge_invoice" type="object" string="Recharge Invoice"
                            class="btn btn-primary"/>
                    <button name="action_create_delivery" type="object" string="Create Abo WH/Out"
                            class="btn btn-primary"
                            attrs="{'invisible': [('state', '!=', 'sale')]}"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_abo_delivery" type="object" class="oe_stat_button" icon="fa-truck"
                            attrs="{'invisible': [('state', '!=', 'sale')]}">
                        <field name="abo_delivery_count" widget="statinfo" string="Abo Delivery"/>
                    </button>
                    <button name="action_view_subscription" type="object" class="oe_stat_button" icon="fa-usd"
                            attrs="{'invisible': [('state', '!=', 'sale')]}"  string="Mollie Subscription">
                    </button>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                    <field name="is_starting_fees" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='validity_date']" position="before">
<!--                    <field name="mollie_subscription_id"/>-->
                    <field name="cirf_result" widget="state_selection"/>
                </xpath>


            </field>
        </record>
    </data>
</odoo>