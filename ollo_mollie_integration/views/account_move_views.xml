<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit account move form View -->
        <record id="base_view_account_move_form_inherit_ollo_mollie" model="ir.ui.view">
            <field name="name">account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="mollie_refund_done" invisible="1"/>
                    <field name="recharge_done" invisible="1"/>
                    <button name="create_refund" type="object" string="Create Mollie Credit Note"
                            class="btn btn-primary"
                            attrs="{'invisible': ['|','|',('move_type', '!=', 'out_refund'), ('state', '!=', 'posted'),('mollie_refund_done', '!=', False)]}"/>
                    <button name="create_customer_recharge" type="object" string="Create Customer Recharge"
                            class="btn btn-primary" attrs="{'invisible':['|','|',('is_recharge_invoice', '=', False),('state', '!=', 'posted'),('recharge_done','!=',False)]}"/>
                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="mollie_payment_state"/>
                    <field name="is_recharge_invoice" invisible="1"/>
                    <field name="invoice_type" readonly="1" attrs="{'invisible': [('is_recharge_invoice', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>