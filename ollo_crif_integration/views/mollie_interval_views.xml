<odoo>

    <record id="mollie_interval_view_form" model="ir.ui.view">
        <field name="name">mollie.interval.form</field>
        <field name="model">mollie.interval</field>
        <field name="arch" type="xml">
            <form edit="1" create="0" delete="0">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="interval_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mollie_interval_view_tree" model="ir.ui.view">
        <field name="name">mollie.interval.tree</field>
        <field name="model">mollie.interval</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="interval_type"/>
            </tree>
        </field>
    </record>

    <record id="mollie_interval_action" model="ir.actions.act_window">
        <field name="name">Mollie Interval</field>
        <field name="res_model">mollie.interval</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="mollie_interval_menu" name="Mollie Interval"
              parent="molliesubscriptions.molliesubscruption_payment_root" action="mollie_interval_action"
              sequence="3"/>
</odoo>