<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit product template form view -->
    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_delivery" type="object" string="Create WH/Out"
                        class="btn btn-primary"
                        attrs="{'invisible': [('state', '!=', 'sale')]}"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_abo_delivery" type="object" class="oe_stat_button" icon="fa-truck"
                        attrs="{'invisible': [('state', '!=', 'sale')]}">
                    <field name="abo_delivery_count" widget="statinfo" string="Abo Delivery"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                <field name="is_starting_fees" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>